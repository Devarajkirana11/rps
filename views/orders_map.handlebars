<link rel="stylesheet" type="text/css" href="/css/map.css">

<script type="text/javascript" src="/js/map.js"></script>
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

{{> header }}

<section>
  <div class="content-wrapper">
    <div class="container-fluid">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/">Orders Map</a>
        </li>
        <li class="breadcrumb-item active">Orders Map</li>
      </ol>
      <div class="row mx-3">
        <form class="form-group row" name="order" id="order_filter" action="/orders/map-view" method="POST">
                
                <div class="col-xs-4 mx-3 required">
                    <label class="control-label">DC Name</label>
                    <select class="form-control" id="store_name" name="store_name">
                        <option value="">Select</option>
                        {{#each dc }}
                            <option value="{{ this.uuid }}">{{ this.name }}</option>
                        {{/each}}
                    </select>
                </div>
                
                <div class="col-xs-4 mx-3 required">
                    <label class="control-label">Delivery Date</label>
                    <input class="form-control" name="delivery_date" id="delivery_date" type="text" placeholder="Delivery Date">
                    <p class="help-block text-danger"></p>
                </div>

                <div class="col-xs-4 mx-3 required">
                    <label class="control-label">Slot</label>
                    <select class="form-control" id="slot" name="slot">
                        <option value="">Select</option>
                        <option value="7:00am - 9:30am">Slot 1</option>
                        <option value="9:30am - 12:00pm">Slot 2</option>
                        <option value="4:30pm - 7:00pm">Slot 3</option>
                        <option value="7:00pm - 09:30pm">Slot 4</option>
                    </select>
                </div>

                <div class="form-group mx-3">
                    <button type="submit" class="search-filter btn btn-primary">Search</button>
                </div>

        </form>
            
      </div>
    <div class="row mx-3">
          <div class="col-md-7"><div id="map-canvas"></div></div>
          <div class="col-md-5 van-assigning-scroll">

            <form class="" name="order-assiging" id="order_assigning" action="/orders/map-view" method="POST">
                <div class="col-md-12 row">
                    <div class="col-md-6">
                        <div class="form-group mx-2 required">
                        <label class="control-label">Vans</label>
                        <select class="form-control" id="vans" name="vans">
                        <option value="">Select Van</option>
                        {{#each vans }}
                        <option data-color="{{ this.color_code }}" value="{{ this.uuid }}">{{ this.make }} {{ this.reg_no }}</option>
                        {{/each}}
                        </select>
                        </div>

                        <input type="hidden" id="color" value="blue" name="color">
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mx-2 required">
                        <label class="control-label">CDE</label>
                        <select class="form-control" id="cde" name="cde">
                        <option value="">Select</option>
                        {{#each cde }}
                        <option value="{{ this.uuid }}">{{ this.first_name }} {{ this.last_name }}</option>
                        {{/each}}
                        </select>
                        </div>
                    </div>
                </div>

                <div class="orders-values mx-2">

                    <label></label>

                </div>


                <div class="form-group mx-2">
                <button type="submit" class="order-save btn btn-primary">Save</button>
                </div>
            </form>
        
          </div>
    </div>
    </div>
</section>

<script src="/js/jquery-ui.js"></script>

{{> footer}}