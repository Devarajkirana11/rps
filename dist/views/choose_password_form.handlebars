
<div style="height: 100vh; overflow: hidden; transform: translate3d(0, 0, 0)">
	<div class="triangle"></div>

	<div class="wrapper login-wrapper">
		<div class="login-form-container">
			<div class="login-form">
				<p class="text-center">
					<img src="https://s3-ap-southeast-1.amazonaws.com/hotelnida/home-images/logo.png" alt="" height="80" width="80">
				</p>

				<form name="confirm_password" method="post" action="/users/confirm/password" class="form-signin">
					<h4 class="text-black fw-semi-thk fs-20 text-center">Choose Password</h4>
					<p class="m-lg-b text-center">Please enter your new password.</p>
					{{#if errors}}
						{{#each errors}}
							<div class="alert alert-danger"> {{ msg }}</div>
						{{/each}}
					{{/if}}
					{{#if success }}
						<div class="alert alert-info">{{ message}}</div>
					{{else if message }}
						<div class="alert alert-danger">{{ message}}</div>
					{{/if}}
						  
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password" placeholder="Password" required="" autofocus="" />
						<span class="text-danger">{{#if password}}{{password}}{{/if}}</span>
					</div>
					<div class="form-group">
						<label>Confirm Password</label>
						<input type="password" class="form-control" name="cpassword" placeholder="Confirm Password" required="" autofocus="" />
						<span class="text-danger">{{#if cpassword}}{{cpassword}}{{/if}}</span>
					</div>	  
					<input type="hidden" name="userid" value="{{userid}}"/>
					<button class="btn btn-danger btn-rounded btn-block m-lg-b"  name="Submit" value="Submit" type="Submit">Save</button>  			

					<p>
						<span class="pull-left"><a href="/users/register" class="text-default">Not registered yet?</a></span>
						<span class="pull-right"><a href="/users/login" class="text-default">Login</a></span>
					</p>

				</form>
			</div>
		</div>			
	</div>
</div>