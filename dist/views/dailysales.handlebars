<script type="text/javascript">
	$(function () {
		document.getElementById('advanced_content').style.display = 'none';
		document.getElementById('filter_off').style.display = 'none';
		var start = moment().subtract(7, 'days');
		var end = moment();

		function cb(start, end) {
			//alert($('#payment_label').length);
			if (!$('#payment_date').length) {
				$("<label id='payment_date'>Payment Date</label>").insertBefore("#reportrange");
			}
			$('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
		}

		$('#reportrange').daterangepicker({
			startDate: start,
			endDate: end,
			ranges: {
				'Today': [moment(), moment()],
				'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
				'Last 7 Days': [moment().subtract(6, 'days'), moment()],
				'Last 30 Days': [moment().subtract(29, 'days'), moment()],
				'This Month': [moment().startOf('month'), moment().endOf('month')],
				'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
			}
		}, cb);

		cb(start, end);

		var startDate = start.format('DD-MM-YYYY');
		var endDate = end.format('DD-MM-YYYY');
		var url = '/report-manager/manager/daily-sales?hotel_id={{hotel_id}}&start_date=' + startDate + '&end_date=' + endDate
		// INITIALIZE DATA TABLE
		updateTable(url);

		var table;

		// CREATE DATA TABLE
		function updateTable(url) {
			table = $('#report-table').DataTable({
				ajax: url,
				//buttons: [
				//	'excel', 'print', footer:true
				//],
				buttons: [
					{
						extend: 'excelHtml5',
						text: 'Download',
						footer: true,
					},
					{
						extend: 'print',
						text: 'Print',
						footer: true,
					}
				],
				dom: 'Bfrtip',
				paging: true,
				//pageLength: 3,
				footerCallback: function (row, data, start, end, display) {
					var api = this.api(), data;
					//alert(api);
					// Remove the formatting to get integer data for summation
					var intVal = function (i) {
						return typeof i === 'string' ?
							i.replace(/[\$,]/g, '') * 1 :
							typeof i === 'number' ?
								i : 0;
					};

					// Total over all pages
					total = api
						.column(16)
						.data()
						.reduce(function (a, b) {
							return intVal(a) + intVal(b);
						}, 0);
					// alert(total);
					// Total over this page
					pageTotal = api
						.column(16, { page: 'current' })
						.data()
						.reduce(function (a, b) {
							return intVal(a) + intVal(b);
						}, 0);
					//alert(pageTotal);
					// Update footer
					$(api.column(16).footer()).html(
						//'$'+pageTotal +' ( $'+ total +' total)'
						total.toFixed(2)
					);
				}

			});
		}

		// UPDATE DATATABLE ON DATE CHANGE
		$('#reportrange').on('apply.daterangepicker', function (ev, picker) {
			var startDate = picker.startDate.format('DD-MM-YYYY')
			var endDate = picker.endDate.format('DD-MM-YYYY')

			var url = '/report-manager/manager/daily-sales?hotel_id={{hotel_id}}&start_date=' + startDate + '&end_date=' + endDate;

			table.destroy();

			updateTable(url);
		});

		$("#Submit").click(function () {
			var startDate = $('#reportrange').data('daterangepicker').startDate.format('DD-MM-YYYY');
			var endDate = $('#reportrange').data('daterangepicker').endDate.format('DD-MM-YYYY');
			var reference_id = $('#booking_reference_id').val();
			var checkin_from = $('#checkin_from').val();
			var checkin_to = $('#checkin_to').val();
			var checkout_from = $('#checkout_from').val();
			var checkout_to = $('#checkout_to').val();
			var booking_source = $('#booking_source').val();
			var booking_channel = $('#booking_channel').val();
			var payment_type = $('#payment_type').val();
			//var payment_status= $('#payment_status').val();
			var params = '&start_date=' + startDate + '&end_date=' + endDate;
			if (reference_id) {
				params += '&reference_id=' + reference_id;
			}
			if (checkin_from) { params += '&checkin_from=' + checkin_from; }
			if (checkin_to) { params += '&checkin_to=' + checkin_to; }
			if (checkout_from) { params += '&checkout_from=' + checkout_from; }
			if (checkout_to) { params += '&checkout_to=' + checkout_to; }
			if (booking_source) { params += '&booking_source=' + booking_source; }
			if (booking_channel) { params += '&booking_channel=' + booking_channel; }
			if (payment_type) { params += '&payment_type=' + payment_type; }
			var url = '/report-manager/manager/daily-sales?hotel_id={{hotel_id}}' + params;

			table.destroy();

			updateTable(url);
		});

		var button = document.getElementById('advanced_filter');
		button.onclick = function () {
			var div = document.getElementById('advanced_content');
			if (div.style.display !== 'none') {
				div.style.display = 'none';
				document.getElementById('filter_off').style.display = 'none';
				document.getElementById('filter_on').style.display = 'block';
			}
			else {
				div.style.display = 'block';
				document.getElementById('filter_off').style.display = 'block';
				document.getElementById('filter_on').style.display = 'none';
			}
		};
	});

</script>