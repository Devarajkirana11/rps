<div class="row">
    <div class="col-xs-6 col-md-6 text-center">
        <div class="no-of-rooms">
            <p>
                <small class="text-uppercase fs-xs">Rooms</small>
                <br>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalRooms = searchdata.totalRooms<=1?1:searchdata.totalRooms-1;CalcGuests()"><i class="fa fa-minus-circle fs-xl"></i></a>
                <span class="text-danger fs-xl fw-semi-thk p-md-l p-md-r ng-binding" ng-bind="searchdata.totalRooms">0</span>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalRooms = searchdata.totalRooms+1;CalcGuests()" ><i class="fa fa-plus-circle fs-xl"></i></a>
            </p>														
        </div>
    </div>
    <div class="col-xs-12 col-md-12"><p class="availabilityMessage ng-binding text-danger" ng-bind="roomMessage"></p></div>
</div>
<div class="row">
    <div class="col-xs-6 col-md-6 text-center">
        <div class="no-of-rooms">
            <p>
                <small class="text-uppercase fs-xs">Adults</small>
                <br>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalAdults = searchdata.totalAdults<=1?1:searchdata.totalAdults-1;CalcGuests()"><i class="fa fa-minus-circle fs-xl"></i></a>
                <span class="text-danger fs-xl fw-semi-thk p-md-l p-md-r ng-binding" ng-bind="searchdata.totalAdults">0</span>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalAdults = searchdata.totalAdults+1;CalcGuests()"><i class="fa fa-plus-circle fs-xl"></i></a>
            </p>
            <p class="availabilityMessage ng-binding"></p>
        </div>
    </div>
    <div class="col-xs-6 col-md-6 text-center">
        <div class="no-of-rooms">
            <p>
                <small class="text-uppercase fs-xs">Children</small>
                <br>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalkids = searchdata.totalkids<=0?0:searchdata.totalkids-1;CalcGuests()"><i class="fa fa-minus-circle fs-xl"></i></a>
                <span class="text-danger fs-xl fw-semi-thk p-md-l p-md-r ng-binding" ng-bind="searchdata.totalkids">0</span>
                <a href="javascript:void(0)" class="text-default" ng-click="searchdata.totalkids = searchdata.totalkids+1;CalcGuests()"><i class="fa fa-plus-circle fs-xl"></i></a>
            </p>
            <p class="availabilityMessage ng-binding"></p>
        </div>
    </div>

    <div class="col-xs-12 m-lg-t">
        <button class="btn btn-danger btn-rounded btn-block hidden-md hidden-lg" id="res-search-submit">Submit</button>
    </div>
</div>