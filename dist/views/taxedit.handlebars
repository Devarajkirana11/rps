
<!-- Begin Page Content -->

{{> nav this}}

{{> header}}

<script type="text/javascript">

	jQuery(document).ready(function(){

		var tax_type = $("#tax_type").val();

		if(tax_type == 'Service Fee'){
		
			$("#applicable_level").hide();
		
		} else {
		
			$("#applicable_level").show();
		
		}

		$("#tax_type").change(function(){

			var values = $(this).val();
	
			if(values == 'Service Fee'){
		
				$("#applicable_level").hide();
		
			} else {
		
				$("#applicable_level").show();
		
			}

		});

	});

</script>

<main id="page-content">
	<div class="row row-xl page-title">
        <div class="col-md-12">
            <h3 class="text-black fw-semi-thk">Tax</h3>
        </div>
    </div>

	<div class="page-container">
		<div class="row row-xl">
			<div class="col-md-12 m-lg-b">
				<h4 class="text-black fw-semi-thk fs-20">Edit Tax</h4>
			</div>
		</div>

		<div class="row row-xl">
			<div class="col-md-12">
				<form class="" action='/admin/tax/{{ output._tax_id }}/edit' method="POST">

					{{#if errors}}
						{{#each errors}}
							<div class="alert alert-danger"> {{ msg }}</div>
						{{/each}}
					{{/if}}
					
					<div class="row row-xl">
						<div class="col-md-12">
							<div class="form-group">
								<input type="hidden" value="{{ output._tax_id }}" id="" name="tax_id" placeholder="" class="form-control">
							</div>	
						</div>
					</div>
					
					<div class="row row-xl">
						<div class="col-md-12">
							<div class="form-group">
								<label class="" for="taxname">Tax Name</label>
								<input type="text" value="{{ output._name }}" id="" name="tax_name" placeholder="" class="form-control">
							</div>	
						</div>
					</div>

					<div class="row row-xl  selectWrapper">

						<div class="col-md-4">
						<div class="form-group">
						<label for="">Country</label>

						<div class="select-wrapper">
						<select name="country" class="country form-control">
						<option value="select" {{#equal output._country 'select'}} selected="selected" {{/equal}}>Choose Country</option>
						{{#if locationmasters }}
						{{#each locationmasters }}
						<option value="{{@key}}" {{#equal ../output._country @key}} selected="selected" {{/equal}}>{{ this.name }}</option>
						{{/each}}
						{{/if}}
						</select>
						</div>	
						</div>
						</div>

						<div class="col-md-4">
						<div class="form-group">
						<label for="">State</label>

						<div class="select-wrapper">
						<select  name="state" placeholder="" class="state form-control">
						<option value="select" {{#equal output._state 'select'}} selected="selected" {{/equal}}>Choose State</option>
						{{#if locationmasters }}
						{{#each locationmasters }}
						{{#each this.states}}
						<option value="{{@key}}" {{#equal ../../output._state @key}} selected="selected" {{/equal}}>{{ this.name }}</option>
						{{/each}}
						{{/each}}
						{{/if}}
						</select>
						</div>
						</div>
						</div>

						<div class="col-md-4">
						<div class="form-group">
						<label for="">City</label>

						<div class="select-wrapper">
						<select name="city" placeholder="" class="city form-control">
						<option value="select" {{#equal output._city 'select'}} selected="selected" {{/equal}}>Choose City</option>
						{{#if locationmasters }}
						{{#each locationmasters }}
						{{#each this.states}}
						{{#each this.cities}}
						<option value="{{@key}}" {{#equal ../../../output._city @key}} selected="selected" {{/equal}}>{{ this.name }}</option>
						{{/each}}	
						{{/each}}
						{{/each}}
						{{/if}}
						</select>
						</div>
						</div>
						</div>

					</div>

					<div class="row row-xl">
						<div class="col-md-12">
							<div class="form-group" class="form-control">
								<label class="" for="type">Type</label>
								<div class="select-wrapper">
									<select name="type" class="form-control" id="tax_type">
										<option value="">Select Type</option>
										<option value="Service Fee" {{#equal output._type 'Service Fee'}} selected="selected" {{/equal}}>Service Fee</option>
										<option value="Tax" {{#equal output._type 'Tax'}} selected="selected" {{/equal}}>Tax</option>
									</select>
								</div>
							</div>
						</div>
					</div>
					

					<div class="row row-xl">
						<div class="col-md-12">
							<div class="form-group" class="form-control">
								<label class="" for="type">Calculation</label>
								<div class="select-wrapper">
									<select name="calculation_type" class="form-control">
										<option value="">Select</option>
										<option value="Fixed" {{#equal output._calculation_type 'Fixed'}} selected="selected" {{/equal}}>Fixed</option>
										<option value="Percentage" {{#equal output._calculation_type 'Percentage'}} selected="selected" {{/equal}}>Percentage</option>
									</select>
								</div>
							</div>	
						</div>
					</div>

					<div class="row row-xl">
						<div class="col-md-12">
							<div class="form-group" class="form-control">
								<label class="" for="based_on">Based on</label>
								<div class="select-wrapper">
									<select name="based_on" class="form-control">
										<option value="">Select</option>
										<option value="Room Price" {{#equal output._based_on 'Room Price'}} selected="selected" {{/equal}}>Room Price</option>
										<option value="Room Night" {{#equal output._based_on 'Room Night'}} selected="selected" {{/equal}}>Room Night</option>
									</select>
								</div>
							</div>	
						</div>
					</div>

					<div class="row row-xl">
						<div class="col-md-6">
							<div class="form-group">
								<label class="" for="value">Value</label>
								<input type="text" value="{{ output._tax_value }}" id="" name="tax_value" placeholder="" class="form-control">
							</div>	
						</div>

						<div class="col-md-6">
							<div class="form-group">
								<label class="" for="status">Status</label>
								<div class="select-wrapper">
									<select name="status" class="form-control">
										<option value="">Select</option>
										<option value="Active" {{#equal output._status 'Active'}} selected="selected" {{/equal}}>Active</option>
										<option value="InActive"  {{#equal output._status 'InActive'}} selected="selected" {{/equal}}>InActive</option>
									</select>
								</div>
							</div>	
						</div>
					</div>

					
					<div class="row row-xl">
				
						{{#if output._add_on}}
							<div class="col-md-6">
								<div class="checkbox">
									<input type="checkbox" name="add_on" value="1" {{#equal output._add_on '1'}} checked="checked" {{/equal}} id="add-on-checkbox">
									<label for="add-on-checkbox">Add On</label>
								</div>
							</div>
						{{/if}}

						{{#if output._applicable_level}}
							<div class="col-md-6">
								<div id="applicable_level">
									<div class="radio-inline">
										<div class="radio-default danger">
											<input type="radio" name="applicable_level" value="0" {{#equal output._applicable_level '0'}} checked="checked" {{/equal}} id="applicable_level_before"> 
											<label for="applicable_level_before">Before Service Fee</label>
										</div>
									</div>

									<div class="radio-inline">
										<div class="radio-default danger">
											<input type="radio" name="applicable_level" value="1" {{#equal output._applicable_level '1'}} checked="checked" {{/equal}} id="applicable_level_after">
											<label for="applicable_level_after">After Service Fee</label>
										</div>
									</div>
								</div>
							</div>
						{{/if}}

					</div>
					
					<div class="row row-xl">
						<div class="col-md-12">
							<div class="m-xl-t text-right">
								<button class="btn btn-danger w-150 btn-rounded m-md-b"  name="Submit" value="Save" type="Submit">Save</button> 
								<button class="btn btn-default w-150 btn-rounded m-md-b" onclick="history.go(-1);">Cancel</button>
							</div>	
						</div>
					</div>
				</form>	
			</div>
		</div>
	</div>
</main>


{{> footer}}