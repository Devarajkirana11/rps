{{>nav}}

{{>header}}    
    
<main id="page-content">      
    <div class="row row-xl page-title">
        <div class="col-md-12">
            <h3 class="text-black fw-semi-thk">Room Type</h3>
        </div>
    </div>
{{#if displayStatus}}
    <link href="/css/jquery.bxslider.css" rel="stylesheet" />
    <script src="/js/jquery.bxslider.min.js"></script>
    <script>
        $(function(){
            $('.bxslider').bxSlider();
        }) 
    </script>
    <div class="page-container">
        <!-- Begin Hotels View -->
        <div class="row row-sm grid-view">
            {{#if data}}
            {{#each data}}
            <div class="col-md-4">
                <div class="grid-item-container">
                    <!-- <a href="javascript:void(0)" class="text-default"> -->
                    <div class="grid-item">
                        <div class="grid-item-preview-container">
                            {{#if this.type._image_fids}}
                                <ul class="bxslider">
                                {{#each this.type._image_fids}}
                                    {{#if this.fid}}
                                        <li><img src="{{this.image}}" width="100%"></li>
                                    {{else}}
                                        <li><img src="https://images.pexels.com/photos/261102/pexels-photo-261102.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb" width="100%"></li>
                                    {{/if}}
                                {{/each}}
                                </ul>
                            {{/if}}   
                            <div class="grid-item-description">
                                <h3 class="fw-thk m-n">{{this.type._type}}</h3>
                                {{!--<p>({{this.type._name}})</p>--}}
                            </div>
                        </div>
                        <div class="grid-item-view-more p-n">
                            <!-- <div class="row">
                                <div class="col-xs-12">
                                    <p class="text-center"><small class="text-uppercase">Number of Guests</small></p>
                                    <hr class="m-n">
                                </div>
                            </div> -->
                            <div class="row text-center m-md-b m-md-t">
                                <div class="col-xs-6">
                                    <p class="text-uppercase m-n"><small>Adults</small></p>
                                    <h1 class="text-uppercase m-n text-black fw-thk">{{this.type._no_of_guest_stay}}</h1>
                                    <p class="text-uppercase m-n"><small>Standard Occupany</small></p>
                                </div>
                                <div class="col-xs-6">
                                    <p class="text-uppercase m-n"><small>Rooms </small></p>
                                    <h1 class="text-uppercase m-n text-black fw-thk">{{this.type._no_of_rooms}}</h1>
                                    <p class="text-uppercase m-n"><small>of this type</small></p>
                                </div>
                            </div>
                            
                            <a href="/hotel/{{../hotel_id}}/room/type/{{this.type._type_id}}/edit" class="btn btn-default"><i class="fa fa-pencil fa-fw m-sm-r"></i>Edit</a>
                            <button class="btn btn-default roomTypeImagetrigger" data_type_text = "{{this.type._type}}" data_fids="{{this.type._uploadformFids}}" data_type = "{{this.type._type_id}}" class="btn btn-info btn-lg" ><i class="fa fa-upload fa-fw m-sm-r"></i>Upload Photos</button>
                        </div>
                    </div>
                <!-- </a> -->
                </div>
            </div>
            {{/each}}
            {{/if}}
            <div class="col-md-4">
                <a href="/hotel/room/type/create?hid={{hotel_id}}" class="text-default">
                    <div class="add-more-room-type">
                       <p class="text-center text-uppercase text-grey">Create More Room Type</p>
                        <p class="text-uppercase text-center text-grey">
                            <i class="fa fa-plus-circle fs-72"></i>
                        </p>
                    </div>
                </a>
            </div>
        </div>
        <!-- End Hotels View -->
    </div>
    <!-- Modal -->
    <div id="roomTypeImageUpload" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modal-title"></h4>
            </div>
            <div class="modal-body">
               <div class="col-md-12" id="deleteRowset"></div>
               <div class="form-group">
                    <label>Please choose Image(s) to upload:</label>
                    <input type="file" name="roomTypeImage" class="form-control saveFile"  multiple value=""/>
                    <input type="hidden" name="roomtype" id="fieldroomtype"/>
                    <input type="hidden" name="hotel_id" value="{{hotel_id}}"/>
               </div>
               <div id="message"></div>
            </div>
            <div class="modal-footer">
                <input  type="submit" class="btn btn-primary" value="upload" id="uploadRoomTypImage"/>
                <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
            </div>
            </div>

        </div>
    </div>
{{/if}}
</main>
{{>footer}}